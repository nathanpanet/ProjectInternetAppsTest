@model ProjectInternetAppsTest.Models.User
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>


<form class="px-4 py-3" asp-action="Login">
    <div class="mb-3">
        <label asp-for="UserName" class="control-label">User Name</label>
        <input asp-for="UserName" class="form-control" placeholder="JohnDoe1234" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="control-label">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Sign in</button>
    @if (ViewBag.Error != null)
    {
        <div class="text-danger">@ViewBag.Error</div>
    }

</form>
<div class="dropdown-divider"></div>
<a class="dropdown-item" asp-controller="Users" asp-action="SignUp">New around here? Sign up</a>
<a class="dropdown-item" href="#">Forgot password?</a>